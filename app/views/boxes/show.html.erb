<h1>Show Box</h1>

<div>
  <strong>Name:</strong>
  <%= @box.name %>
</div>
<div>
  <%= link_to 'Add item', new_box_item_path(@box) %>
</div>
<div>
  <% @box.items.each do |item| %>
    <div>
      <%= link_to "#{item.id}", box_item_path(box_id: @box, id: item.id) %>
    </div>
  <% end %>
</div>
<%= link_to 'Back', boxes_path %>
