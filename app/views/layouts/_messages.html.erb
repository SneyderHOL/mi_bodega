<% flash.each do |name, msg| %>
  <% case name %>
  <% when "error" %>
    <% context = "danger" %>
  <% when "notice" %>
    <% context = "success" %>
  <% when "alert" %>
    <% context = "warning" %>
  <% else %>
    <% context = "info" %>
  <% end %>
  <div class="alert alert-<%= context %> alert-dismissible fade show" role="alert">
    <%= msg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>
